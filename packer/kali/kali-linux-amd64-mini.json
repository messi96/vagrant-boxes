{
  "variables": {
    "vm_name": "kali-linux-amd64-mini",
    "disk_size": 20480,
    "iso_checksum": "058948de5d1f01a43a51fb68fc498316",
    "iso_checksum_type": "md5",
    "iso_url": "/Users/prateep/tmp/binary.hybrid.iso",
    "box_desc" : "Kali Linux 64 Bit Mini"
  },
  "description": "{{user `box_desc`}}",
  "builders": [
    {
      "headless": "false",
      "type": "virtualbox-iso",
      "virtualbox_version_file": ".vbox_version",
      "guest_os_type": "Debian_64",
      "vm_name": "{{user `vm_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "disk_size": "{{user `disk_size`}}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "boot_command": [
        "<esc><wait>",
        "install auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "locale=en_US.UTF-8 kbd-chooser/method=us <wait>",
        "netcfg/get_hostname=kali-mini netcfg/get_domain=vagrantup.com debconf/frontend=noninteractive console-setup/ask_detect=false <wait>", 
        "console-keymaps-at/keymap=us keymap=us <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "http_directory": "http",
      "shutdown_command": "/sbin/shutdown -hP 0",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s"
    },
    {
      "headless": "false",
      "type": "vmware-iso",
      "guest_os_type": "debian7-64",
      "vm_name": "{{user `vm_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "disk_size": "{{user `disk_size`}}",
      "boot_command": [
        "<esc><wait>",
        "install auto url=http://172.16.43.1:{{ .HTTPPort }}/preseed.cfg <wait>",
        "locale=en_IE.UTF-8 kbd-chooser/method=us <wait>",
        "netcfg/get_hostname=kali-mini netcfg/get_domain=vagrantup.com debconf/frontend=noninteractive console-setup/ask_detect=false <wait>", 
  "console-keymaps-at/keymap=us keymap=us <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "tools_upload_flavor": "linux",
      "tools_upload_path": "/root/vmware-tools.iso",
      "http_directory": "http",
      "shutdown_command": "/sbin/shutdown -hP 0",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../../puppet/hieradata",
      "destination": "/tmp",
      "pause_before": "10s"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/puppet.sh"
      ]
    },
    {
      "type": "shell",
      "script": "scripts/virtualbox.sh",
      "only": ["virtualbox-iso"]
    },
    {
      "type": "shell",
      "script": "scripts/vmware.sh",
      "only": ["vmware-iso"]
    },
    {
      "type": "puppet-masterless",
        "manifest_file": "../../puppet/manifests/site.pp",
        "module_paths": ["../../puppet/modules"],
        "hiera_config_path": "../../puppet/hiera.yaml",
        "facter":
          {
            "packer": "vagrant"
          }
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [  {
    "type": "vagrant",
    "output" : "{{user `vm_name`}}_{{.Provider}}.box",
    "keep_input_artifact": false
  }
  ]
}
