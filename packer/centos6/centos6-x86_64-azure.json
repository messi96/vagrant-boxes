{
  "variables": {
    "vm_name": "centos6-x86_64-azure",
    "disk_size": 30720,
    "iso_checksum": "32c7695b97f7dcd1f59a77a71f64f2957dddf738",
    "iso_checksum_type": "sha1",
    "iso_url": "http://ftp.heanet.ie/pub/centos/6.5/isos/x86_64/CentOS-6.5-x86_64-bin-DVD1.iso",
    "box_desc" : "Centos Azure Base Image"
  },
  "description": "{{user `box_desc`}}",
  "builders": [
    {
      "headless": "false",
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "vm_name": "{{user `vm_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "disk_size": "{{user `disk_size`}}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"],
        ["storageattach", "{{user `vm_name`}}", "--storagectl", "IDE Controller", "--port", "0", "--device", "0", "--type", "hdd", "--medium", "none"],
        ["closemedium", "disk", "output-virtualbox-iso/{{user `vm_name`}}.vdi", "--delete"],
        ["createhd", "--filename", "output-virtualbox-iso/{{user `vm_name`}}.vhd", "--size", "{{user `disk_size`}}", "--format", "VHD", "--variant", "Standard"],
        ["storageattach", "{{user `vm_name`}}", "--storagectl", "IDE Controller", "--port", "0", "--device", "0", "--type", "hdd", "--medium", "output-virtualbox-iso/{{user `vm_name`}}.vhd"]
      ],
      "boot_command": [
        "<tab><wait>",
        " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-azure.cfg",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "guest_additions_mode": "disable",
      "http_directory": "http",
      "shutdown_command": "/sbin/shutdown -hP 0",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "vboxmanage_post": [
        ["clonehd", "output-virtualbox-iso/{{user `vm_name`}}.vhd", "{{user `vm_name`}}.vhd", "--variant", "Standard"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../../puppet/hieradata",
      "destination": "/tmp",
      "pause_before": "10s"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh"
      ]
    },
    {
      "type": "puppet-masterless",
        "manifest_file": "../../puppet/manifests/site.pp",
        "module_paths": ["../../puppet/modules"],
        "hiera_config_path": "../../puppet/hiera.yaml",
        "facter":
          {
            "packer": "vagrant"
          }
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [  {
    "type": "vagrant",
    "output" : "{{user `vm_name`}}_{{.Provider}}.box",
    "keep_input_artifact": false
  }
  ]
}
